<% layout("/layouts/boilerplate") %>
<div class="row mt-3">
  <div class="col-8 offset-2">
    <h3>Create a New cake</h3>
    <form 
    method="POST" 
    action="/cakes"
    novalidate 
    class="needs-validation"
    enctype="multipart/form-data"
     >
      
      <!-- Title -->
      <div class="mb-3">
        <label for="title" class="form-label">Enter name</label>
        <input
          name="listing[title]"
          placeholder=""
          type="text"
          class="form-control"
          required
        />
        <div class="valid-feedback">Title looks good!</div>
      </div>

      <!-- Description -->
      <div class="mb-3">
        <label for="description" class="form-label">Description</label>
        <textarea
          name="listing[description]"
          class="form-control"
          required
        ></textarea>
        <div class="invalid-feedback">Please enter a short description.</div>
      </div>

      

        <div class="mb-3">
          <label for="image" class="form-label">Upload Listing Image</label>
          <input
            name="listing[image]"
          
            type="file"
            class="form-control"
          />
          required
    
      </div>

      <!-- Price -->
      <div class="row">
        <div class="mb-3 col-md-4">
          <label for="price" class="form-label">Price</label>
          <input
            name="listing[price]"
            placeholder=""
            type="number"
            class="form-control"
            required
          />
          <div class="invalid-feedback">Price should be valid.</div>
        </div>

        <!-- Country -->
        <div class="mb-3 col-md-8">
          <label for="country" class="form-label">Enter brand</label>
          <input
            name="listing[country]"
            placeholder=""
            type="text"
            class="form-control"
            required
          />
          <div class="invalid-feedback">Brand name should be valid.</div>
        </div>
      </div>

     

      <!-- Submit Button -->
      <button class="btn btn-dark add-btn mt-3">Add</button>
    </form>
  </div>
</div> 