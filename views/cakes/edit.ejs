<% layout("/layouts/boilerplate") %>

<style>
  html, body {
    height: 100%;
    overflow-y: scroll !important;
  }
  img {
    max-width: 100%;
    height: auto;
  }
</style>


<div class="row mt-3">
  <div class="col-8 offset-2">
    <h3>Edit your Cake</h3>
    <form
  method="POST" 
  action="/cakes/<%= cake._id %>?_method=PUT" 
  novalidate 
  class="needs-validation"
  enctype="multipart/form-data"
>  
    
     
      
 <div class="mb-3">
 <label for="title" class="form-label">Cake name</label>
 <input
 name="cake[name]" 
 value="<%= cake.name %>"
 type="text" 
 class="form-control"
 required 
/>
        <div class="valid-feedback">Cake name looks good!</div>
      </div>

      
      <div class="mb-3">
        <label for="description" class="form-label">Description</label>
        <textarea name="cake[description]" class="form-control" required><%=cake.description %></textarea>
        <div class="valid-feedback">Please enter a short description</div>
      </div>



      <div class="mb-3">
        Original Cake Image <br />
        <img src="<%=  originalImageUrl%>" />
      </div>


      <div class="mb-3">
        <label for="image" class="form-label">Upload New Image </label>
        <input 
        name="cake[image]" 
        type="file" 
        class="form-control"
         />

      </div>


      <div class="row">
        <div class="mb-3 col-md-4">
          <label for="price" class="form-label">Price</label>
          <input name="cake[price]" value="<%= cake.price %>" type="number" class="form-control" required />
          <div class="invalid-feedback">Price should be valid</div>
        </div>

       
        <div class="mb-3 col-md-8">
          <label for="country" class="form-label">brand</label>
          <input name="cake[country]" value="<%=cake.country %>" type="text" class="form-control" required />
          <div class="invalid-feedback">brand name should be valid</div>
        </div>
      </div>

      

      <button class="btn btn-dark edit-btn mt-3">Edit</button>
    </form>
  </div>
</div>



